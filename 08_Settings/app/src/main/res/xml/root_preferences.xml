<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Letra">

        <ListPreference
            android:defaultValue="true"
            app:defaultValue="true"
            app:entries="@array/boton_entries"
            app:entryValues="@array/boton_values"
            app:key="Botones"
            app:title="Color de los botones"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Vista">

        <SwitchPreferenceCompat
            app:key="Fondo"
            app:defaultValue="false"
            app:title="Color del fondo"
            app:summaryOff="Color negro"
            app:summaryOn="Color rojo" />

    </PreferenceCategory>

</PreferenceScreen>